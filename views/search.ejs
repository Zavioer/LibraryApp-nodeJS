<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title> Library Website </title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

</head>
<body>
    <%- include('navigation') %>

    <div class="container">
        <div class="row">
            <div class="col-12 text-center my-5">
                <form method="post" action="/search">
                    <input type="text" name="title" placeholder="Search your title...">
                    <input type="submit" value="Search">
                </form>
            </div>
        </div>
        <div class="row">
            <% if(books != null) { %>
                <% books.forEach(book => { %>
                    <div class="col-md-3 my-3">

                        <h1 class="h5 text-center my-2" > <%= book.volumeInfo.title %> </h1>

                        <% if(book.volumeInfo.imageLinks) { %>
                            <img  class="mx-auto d-block" src="<%= book.volumeInfo.imageLinks.smallThumbnail %>" alt="">
                        <% } %>
                        
                        <div class="mt-1 text-center">
                            <a href="/add/<%= book.id %>"><button class="btn btn-primary btn-sm" role="button"> Add to library </button></a>
                            <a href="/detail/<%= book.id %>"><button class="btn btn-primary btn-sm" role="button"> Show more </button></a>
                        </div>
                    </div>
                <% }) %>
            <% } %>
        </div>
    </div>
    
    <%- include('footer') %>
    
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
</body>
</html>